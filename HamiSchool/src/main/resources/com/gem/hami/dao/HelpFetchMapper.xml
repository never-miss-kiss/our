<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gem.hami.dao.HelpFetchMapper">
    <select id="selectByUserId"  resultType="HelpFetch">
        select hf.* FROM help_fetch hf,user u where hf.user_id = u.user_id
        <if test=" param1 != 0">
            and hf.user_id = ${param1}
        </if>
        <if test=" param2 != 0">
            AND u.school_id = ${param2}
        </if>
    </select>


    <insert id="insertHelpFetch" parameterType="HelpFetch" useGeneratedKeys="true">
        insert into help_fetch(name,fetch_address,remark_ship_address,fetch_phone,receipt_address,remark_receipt_address,receipt_phone,fetch_information,fetch_time,distance,recommended_price,person_price,create_time,user_id,end_time,is_finished,click_count)
        VALUES (#{name},#{fetchAddress},#{remarkShipAddress},#{fetchPhone},#{receiptAddress},#{remarkReceiptAddress},#{receiptPhone},#{fetchInformation},#{fetchTime},#{distance},#{recommendedPrice},#{personPrice},#{createTime},#{userId},#{endTime},#{isFinished},#{clickCount})
    </insert>

    <delete id="deleteHelpFetch" parameterType="java.lang.Integer" >
        delete FROM help_fetch WHERE help_fetch_id = #{param1}
    </delete>

    <update id="updateHelpClickCount" parameterType="java.lang.Integer">
        UPDATE help_fetch set click_count = click_count+1 where help_fetch_id = #{param1}
    </update>
</mapper>