<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gem.hami.dao.HelpQueueMapper">
    <select id="selectByUserId"  resultType="HelpQueue">
        select hq.* FROM help_queue hq,user u where hq.user_id = u.user_id
        <if test=" param1 != 0">
            and hq.user_id = ${param1}
        </if>
        <if test=" param2 != 0">
            AND u.school_id = ${param2}
        </if>
    </select>
<!--如果hq.user_id 为null值就 where hq.user_id = u.user_id 就不成立-->

    <insert id="insertHelpQueue" parameterType="HelpQueue" useGeneratedKeys="true">
        insert into help_queue(name,remark_infomation,queue_address,remark_queue_address,phone,queue_time,duration,distance,recommended_price,person_price,create_time,user_id,end_time,is_finished,click_count)
        VALUES (#{name},#{remarkInfomation},#{queueAddress},#{remarkQueueAddress},#{phone},#{queueTime},#{duration},#{distance},#{recommendedPrice},#{personPrice},#{createTime},#{userId},#{endTime},#{isFinished},#{clickCount})
    </insert>

    <delete id="deleteHelpQueue" parameterType="java.lang.Integer" >
        delete FROM help_queue WHERE help_queue_id = #{param1}
    </delete>

    <update id="updateHelpClickCount" parameterType="java.lang.Integer">
        UPDATE help_queue set click_count = click_count+1 where help_queue_id = #{param1}
    </update>
</mapper>