<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gem.hami.dao.GoodsCommentReplyMapper">

    <!--添加回复评论-->
    <insert id="insertGoodsCommentReply" parameterType="GoodsCommentReply">
        insert into goods_comment_reply values (#{content},#{userId},#{commentedUserId},#{goodsCommentId},#{createTime});
    </insert>

    <!--删除商品回复评论-->
    <insert id="deleteGoodsCommentReply" parameterType="int">
        DELETE FROM goods_comment_reply where goods_comment_reply_id=#{_parameter}
    </insert>

    <!--查询用户之间的评论-->
    <select id="selectGoodsCommentReply" parameterType="int" resultType="GoodsCommentReply">
        SELECT * FROM goods_comment_reply where goods_comment_id=#{_parameter}
    </select>
</mapper>